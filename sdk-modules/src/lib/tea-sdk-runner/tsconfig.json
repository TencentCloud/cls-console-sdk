{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "baseUrl": "./src",
    "target": "es5",
    "rootDir": "src",
    "outDir": "lib",
    "allowJs": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "pretty": true,
    "charset": "utf8",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "global.d.ts"]
}
